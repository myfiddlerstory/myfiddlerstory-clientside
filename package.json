{
  "name": "pwa-react-boilerplate",
  "version": "0.1.5",
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "@material-ui/core": "^3.9.1",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint-plugin-babel": "^5.3.0",
    "history": "^3.0.0",
    "lodash": "^4.17.11",
    "react": "^16.6.3",
    "react-charts": "^2.0.0-alpha.12",
    "react-copy-to-clipboard": "^5.0.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.6.3",
    "react-redux": "^6.0.1",
    "react-responsive-carousel": "^3.1.47",
    "react-router-dom": "^4.2.2",
    "react-webcam": "^1.1.1",
    "react-webcam-capture": "^1.2.1",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-form": "^8.1.0",
    "redux-thunk": "^2.3.0",
    "semantic-ui-react": "^0.84.0"
  },
  "scripts": {
    "start": "webpack-dev-server",
    "build": "rm -rf build && webpack --env.prod --progress --profile",
    "gh": "yarn run build -- --env.prefix $npm_package_name && gh-pages -d build",
    "test": "xo && NODE_ENV=test ava --verbose --serial",
    "lint": "xo"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-react-app": "^9.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-xo": "^0.17.0",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "0.9.0",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "^2.26.0",
    "minimist": "^1.2.0",
    "react-addons-test-utils": "^15.4.2",
    "style-loader": "0.13.1",
    "sw-precache": "^4.3.0",
    "sw-precache-webpack-dev-plugin": "^0.1.3",
    "sw-precache-webpack-plugin": "^0.7.2",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.9",
    "xo": "^0.17.1"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "extends": [
      "xo",
      "xo-react"
    ],
    "rules": {
      "quote-props": [
        "error",
        "as-needed"
      ],
      "react/require-optimization": 0,
      "react/forbid-component-props": 0,
      "import/no-unresolved": 0,
      "import/no-unassigned-import": 0,
      "unicorn/filename-case": 0
    }
  },
  "ava": {
    "files": "test/*.js",
    "require": "babel-register",
    "babel": "inherit"
  }
}
